<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Room</title>
    <script>
        const ROOMID = "<%= roomID %>"
        const ORGID = "<%= orguserID %>"
        const ORGNAME = "<%= orguserNAME %>"
        const ORGINFO = "<%= roomINFO %>"
        let ORGROLE = "<%= orguserROLE %>"
        const ORGANON = "<%= orguserANON %>"
    </script>
    <script src="https://unpkg.com/peerjs@1.4.5/dist/peerjs.min.js" defer></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="../script.js" defer></script>
    <script src="../message.js" defer></script>
    <link rel="stylesheet" href="../styles/room_style.css">
</head>
<body>
    <h1><%= roomINFO.topic %></h1>
    <h3><%= roomINFO.desc %></h3>
    <div class="room-holder">
        <div id="records"></div>
        <div class="side-section">
            <div class="participants">
                <ul id="p_list"></ul>
            </div>
            <div class="chat">
                <div id='chat-space'>
                    Chat:
                </div>
                <div id="chatbox">
                    <form id="messageForm">
                        <input type="text" id="message-box">
                        <input type="submit" value="send" id="sendbtn">
                    </form>
                </div>
            </div>
        </div>
    </div>
    <nav>
        <div class="nav" id="nav">
            <ul>
                <li><button class="mute_aud" id="mute_aud">MUTE</button></li>
                <li><button class="mute_vid" id="mute_vid">STOP VIDEO</button></li>
                <li><button class="invite" id="invite">INVITE</button></li>
                <li><button class="people" id="people">PARTICIPANTS</button></li>
                <li><button class="chatbutton" id="chatbutton">CHAT</button></li>
                <li><button class="exit" id="exit">LEAVING MEETING</button></li>
            </ul>
        </div>
    </nav>
</body>
<script src="../admin.js" defer></script>
</html>